{
  /* =============================== vscode settings =============================== */
  // editor settings
  "editor.fontFamily": "Input Mono Regular",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.glyphMargin": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  // "editor.lineNumbers": "interval",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary", // show whitespace
  "editor.suggestSelection": "first",
  "editor.detectIndentation": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.cursorBlinking": "smooth",
  "editor.stickyScroll.enabled": true,
  "editor.formatOnPaste": true,

  // workbench settings
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "eq-material-theme-icons-ocean",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.colorTheme": "Vitesse Dark Soft",
  "workbench.sideBar.location": "right",

  // explorer settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // terminal settings
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "100",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Input Mono Regular",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.profiles.windows": {
    // powershell
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    // git-bash
    "Git-Bash": {
      "path": "D:\\Softwares\\Git\\bin\\bash.exe", // git path in your computer
      "overrideName": true // 修改tab的名字
    },
    // WSL
    "Ubuntu": {
      "path": "C:\\Windows\\System32\\wsl.exe",
      "args": []
    }
  },
  "terminal.integrated.defaultProfile.windows": "Command Prompt", // 默认终端

  

  /* =============================== language settings =============================== */
  // markdown
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },

  // python
  "python.formatting.provider": "none",
  "python.formatting.blackArgs": [
    "--skip-string-normalization",  // 关闭单引号 -> 双引号
    "--line-length",  // 每行最多79个字符，超过了后，格式化就会换行
    "79"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },

  // json
  "[json]": {
    "editor.formatOnSave": false
  },



  /* =============================== extension settings =============================== */
  // autoDocstring
  "autoDocstring.docstringFormat": "numpy",

  // emmet
  "emmet.syntaxProfiles": {
    "vue-html": "html",
    "vue": "html"
  },
  "emmet.includeLanguages": {
    "django-html": "html"
  },

  // auto-close-tag
  "auto-close-tag.disableOnLanguage": [
    "typescript"
  ],

  // postImage
  "pasteImage.path": "${currentFileDir}/attachments",

  // errorLens
  "errorLens.excludeBySource": [     
    "Pylance(reportUndefinedVariable)"   
  ],



  /* =============================== git settings =============================== */
  "git.confirmSync": false,   
  "gitlens.hovers.currentLine.over": "line",
  "git.autofetch": true,



  /* =============================== other settings =============================== */
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "kite.showWelcomeNotificationOnStartup": false,
  "notebook.cellToolbarLocation": {     
    "default": "right",     
    "jupyter-notebook": "left"   
  },
  "vsicons.dontShowNewVersionMessage": true,   
  "tabnine.experimentalAutoImports": true,
  "security.workspace.trust.untrustedFiles": "open",
  "files.associations": {
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
}